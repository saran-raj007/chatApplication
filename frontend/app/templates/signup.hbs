<link rel="stylesheet" href="assets/signup.css">
<div class="signup-container">
  <h2>Sign Up</h2>
  <form {{ action  "signup" on="submit" }} >
    
    <label for="name">Name</label>
    <input type="text" id="user-name" name="user-name" placeholder="Enter your name" required>

    <label for="mobile">Mobile Number</label>
    <input type="number" id="user-mobile" name="user-mobile" placeholder="Enter your mobile number" maxlength="10" required>

<!--    <label for="profile-pic">Profile Picture</label>-->
<!--    <input type="file" id="profile-pic"  accept="image/*">-->

    <label for="password">Password</label>
    <input type="password" id="user-pass" placeholder="Enter your password" required>

    <button type="submit">Sign Up</button>
  </form>
</div>
